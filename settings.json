{
  "mcpServers": {},
  "env": {
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1",
    "CLAUDE_CODE_DISABLE_TELEMETRY": "1"
  },
  "permissions": {
    "allow": [
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(tree:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(wc:*)",
      "Bash(test -f:*)",
      "Bash(mkdir:*)",
      "Bash(git log:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git branch:*)",
      "Bash(git ls-tree:*)",
      "Bash(git submodule:*)",
      "Bash(git fetch:*)",
      "Bash(git stash:*)",
      "Bash(git worktree:*)",
      "Bash(gh pr:*)",
      "Bash(gh repo:*)",
      "Bash(uv:*)",
      "Bash(ruff:*)",
      "Bash(cargo fmt:*)",
      "Bash(cargo clippy:*)",
      "Bash(cargo test:*)",
      "Bash(cargo build:*)",
      "WebSearch"
    ],
    "deny": [],
    "ask": [
      "Bash(rm:*)",
      "Bash(git push:*)",
      "Bash(git commit:*)",
      "Bash(git rebase:*)"
    ],
    "defaultMode": "default"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          { "type": "command", "command": "~/.claude/hooks/commit_guard.py" }
        ]
      },
      {
        "matcher": "Read",
        "hooks": [
          { "type": "command", "command": "~/.claude/hooks/block_secrets.py" }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/protect_claude_md.py"
          },
          { "type": "command", "command": "~/.claude/hooks/block_secrets.py" }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/protect_claude_md.py"
          },
          { "type": "command", "command": "~/.claude/hooks/block_secrets.py" }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          { "type": "command", "command": "~/.claude/hooks/emoji_guard.py" },
          { "type": "command", "command": "~/.claude/hooks/no_ai_comments.py" },
          { "type": "command", "command": "~/.claude/hooks/format_files.py" }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          { "type": "command", "command": "~/.claude/hooks/emoji_guard.py" },
          { "type": "command", "command": "~/.claude/hooks/no_ai_comments.py" },
          { "type": "command", "command": "~/.claude/hooks/format_files.py" }
        ]
      }
    ]
  },
  "model": "opus",
  "enabledPlugins": {
    "code-review@claude-code-plugins": true,
    "commit-commands@claude-code-plugins": true,
    "feature-dev@claude-code-plugins": true,
    "python-development@claude-code-workflows": true,
    "cicd-automation@claude-code-workflows": true,
    "code-documentation@claude-code-workflows": true,
    "code-refactoring@claude-code-workflows": true,
    "context7@claude-plugins-official": true
  }
}
