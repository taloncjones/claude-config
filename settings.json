{
  "env": {
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1",
    "CLAUDE_CODE_DISABLE_TELEMETRY": "1"
  },
  "permissions": {
    "allow": [
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(tree:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(wc:*)",
      "Bash(test -f:*)",
      "Bash(mkdir:*)",
      "Bash(git log:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git branch:*)",
      "Bash(git ls-tree:*)",
      "Bash(git submodule:*)",
      "Bash(git fetch:*)",
      "Bash(git checkout:*)",
      "Bash(git stash:*)",
      "Bash(git worktree:*)",
      "Bash(git rev-list:*)",
      "Bash(git rev-parse:*)",
      "Bash(git show:*)",
      "Bash(git merge-base:*)",
      "Bash(git ls-files:*)",
      "Bash(git remote:*)",
      "Bash(git describe:*)",
      "Bash(git shortlog:*)",
      "Bash(git blame:*)",
      "Bash(git for-each-ref:*)",
      "Bash(git symbolic-ref:*)",
      "Bash(git name-rev:*)",
      "Bash(git config --get:*)",
      "Bash(gh pr:*)",
      "Bash(gh repo:*)",
      "Bash(gh run:*)",
      "Bash(gh issue:*)",
      "Bash(gh workflow:*)",
      "Bash(gh search:*)",
      "Bash(gh status:*)",
      "Bash(jq:*)",
      "Bash(docker ps:*)",
      "Bash(docker images:*)",
      "Bash(docker logs:*)",
      "Bash(kubectl get:*)",
      "Bash(kubectl describe:*)",
      "Bash(kubectl logs:*)",
      "Bash(cargo check:*)",
      "Bash(cargo tree:*)",
      "Bash(cargo metadata:*)",
      "Bash(cargo doc:*)",
      "Bash(rustup show:*)",
      "Bash(docker inspect:*)",
      "Bash(docker-compose ps:*)",
      "Bash(docker-compose config:*)",
      "Bash(helm list:*)",
      "Bash(helm status:*)",
      "Bash(helm template:*)",
      "Bash(which:*)",
      "Bash(file:*)",
      "Bash(stat:*)",
      "Bash(diff:*)",
      "Bash(realpath:*)",
      "Bash(md5:*)",
      "Bash(shasum:*)",
      "Bash(hexdump:*)",
      "Bash(sort:*)",
      "Bash(uniq:*)",
      "Bash(cut:*)",
      "Bash(uv:*)",
      "Bash(ruff:*)",
      "Bash(cargo fmt:*)",
      "Bash(cargo clippy:*)",
      "Bash(cargo test:*)",
      "Bash(cargo build:*)",
      "WebSearch",
      "Read(~/.claude/**)"
    ],
    "deny": [],
    "ask": [
      "Bash(rm:*)",
      "Bash(git push:*)",
      "Bash(git commit:*)",
      "Bash(git rebase:*)"
    ],
    "defaultMode": "default"
  },
  "model": "opus",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/commit_guard.py"
          }
        ]
      },
      {
        "matcher": "Read|Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/block_secrets.py"
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/protect_claude_md.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/emoji_guard.py"
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/no_ai_comments.py"
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/format_files.py"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "commit-commands@claude-code-plugins": true,
    "feature-dev@claude-code-plugins": true,
    "python-development@claude-code-workflows": true,
    "cicd-automation@claude-code-workflows": true,
    "code-documentation@claude-code-workflows": true,
    "code-refactoring@claude-code-workflows": true,
    "context7@claude-plugins-official": true,
    "atlassian@claude-plugins-official": true,
    "frontend-design@claude-plugins-official": true,
    "code-review@claude-plugins-official": true
  },
  "mcpServers": {}
}
